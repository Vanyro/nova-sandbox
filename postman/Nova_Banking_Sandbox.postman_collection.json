      "item": [
        {
          "name": "List All Accounts",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.accounts && response.accounts.length > 0) {",
                  "    pm.collectionVariables.set('accountId', response.accounts[0].id);",
                  "    pm.collectionVariables.set('userId', response.accounts[0].userId);",
                  "}",
                  "",
                  "pm.test('Status code is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has accounts array', () => {",
                  "    pm.expect(response.accounts).to.be.an('array');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/accounts?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["accounts"],
